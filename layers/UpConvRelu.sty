{   			
\draw [relu,fill=\fillcolor,draw=\fillcolor]  
    (\k*\cubescale ,\cubescale*\cubey/2  , \cubescale*\cubez/2) coordinate (d) 
    -- ++(-\cubescale*\x/3,0,0) coordinate (a1) 
    -- ++(0,-\cubescale*\cubey,0) coordinate (b1) 
